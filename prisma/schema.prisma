generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Items {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  quantity    Int         @default(1)
  measureType MeasureType
  category    Category
}

enum Category {
  PADARIA
  LEGUME
  CARNE
  FRUTA
  BEBIDA
}

enum MeasureType {
  UNIT
  LITER
  KILOGRAM
}
